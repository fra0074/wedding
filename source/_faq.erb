<!-- FAQ Section -->
<section id="faq" class="section faq-section">
  <div class="section-background">
    <div class="bg-decorations">
      <div class="bg-decoration bg-decoration-1"></div>
      <div class="bg-decoration bg-decoration-2"></div>
      <div class="bg-decoration bg-decoration-3"></div>
    </div>
  </div>
  
  <div class="container" style="max-width: 80rem;">
    <div class="section-header">
      <h2 class="section-title"><%= current_translations.faq.title %></h2>
      <p class="section-subtitle"><%= current_translations.faq.subtitle %></p>
      <div class="section-divider">
        <div class="divider-line"></div>
        <svg class="divider-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="divider-line"></div>
      </div>
    </div>

    <div style="display: flex; flex-direction: column; gap: 2rem; position: relative; z-index: 10;">
      <!-- Regalo FAQ -->
      <div class="card">
        <div style="padding: 1.5rem 1.5rem 0; display: flex; align-items: center; gap: 0.75rem;">
          <svg style="width: 1.5rem; height: 1.5rem; color: var(--puglia-orange);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
          </svg>
          <h3 style="font-size: 1.25rem; color: var(--puglia-text-dark); font-weight: 600;"><%= current_translations.faq.regalo.title %></h3>
        </div>
        <div style="padding: 1.5rem;">
          <div style="border-top: 1px solid rgba(232, 220, 192, 0.5);">
            <button class="accordion-trigger" data-accordion="regalo-1">
              <span><%= current_translations.faq.regalo.question1 %></span>
              <svg class="chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="accordion-content" id="regalo-1">
              <div style="padding-bottom: 1rem;">
                <p style="color: var(--puglia-text-light); line-height: 1.6;"><%= current_translations.faq.regalo.answer1 %></p>
              </div>
            </div>
          </div>
          
          <div style="border-top: 1px solid rgba(232, 220, 192, 0.5);">
            <button class="accordion-trigger" data-accordion="regalo-2" >
              <span><%= current_translations.faq.regalo.question2 %></span>
              <svg class="chevron"  fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="accordion-content" id="regalo-2" >
              <div style="padding-bottom: 1rem;">
                <p style="color: var(--puglia-text-light); line-height: 1.6;"><%= current_translations.faq.regalo.answer2 %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Turismo FAQ -->
      <div class="card">
        <div style="padding: 1.5rem 1.5rem 0; display: flex; align-items: center; gap: 0.75rem;">
          <svg style="width: 1.5rem; height: 1.5rem; color: var(--puglia-orange);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          </svg>
          <h3 style="font-size: 1.25rem; color: var(--puglia-text-dark); font-weight: 600;"><%= current_translations.faq.turismo.title %></h3>
        </div>
        <div style="padding: 1.5rem;">
          <div style="border-top: 1px solid rgba(232, 220, 192, 0.5);">
