<!-- RSVP Section -->
<section id="rsvp" class="section rsvp-section">
  <div class="section-background">
    <div class="bg-decorations">
      <div class="bg-decoration bg-decoration-1"></div>
      <div class="bg-decoration bg-decoration-2"></div>
      <div class="bg-decoration bg-decoration-3"></div>
    </div>
  </div>
  
  <div class="container" style="max-width: 64rem;">
    <div class="section-header">
      <div style="display: flex; justify-content: center; margin-bottom: 1.5rem;">
        <svg style="width: 4rem; height: 4rem; color: var(--puglia-orange); animation: pulse 2s ease-in-out infinite;" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
        </svg>
      </div>
      
      <h2 class="section-title"><%= current_translations.rsvp.title %></h2>
      <p style="font-size: 1.25rem; color: var(--puglia-text-light); font-style: italic; font-weight: 300; margin-bottom: 1.5rem;"><%= current_translations.rsvp.subtitle %></p>
      
      <div class="section-divider">
        <div class="divider-line"></div>
        <svg class="divider-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 0V3m6 4V3M6 7h12l1 12H5l1-12z"></path>
        </svg>
        <div class="divider-line"></div>
      </div>
    </div>

    <!-- Main RSVP Card -->
    <div class="card" style="margin-bottom: 2rem; position: relative; z-index: 10;">
      <div style="text-align: center; padding: 1.5rem 1.5rem 0;">
        <h3 style="font-size: 1.5rem; color: var(--puglia-text-dark); font-family: 'Playfair Display', serif;">
          <%= current_translations.rsvp.deadline %> 
          <span style="color: var(--puglia-orange); font-weight: 600;"><%= current_translations.rsvp.deadline_date %></span>
        </h3>
      </div>
      <div style="padding: 1.5rem; display: flex; flex-direction: column; gap: 1.5rem;">
        <p style="color: var(--puglia-text-dark); line-height: 1.6; text-align: center; font-size: 1.125rem;">
          <%= current_translations.rsvp.description %>
        </p>
        
        <div style="text-align: center;">
          <button onclick="alert('<%= current_translations.rsvp.note %>')" 
                  style="display: inline-flex; align-items: center; gap: 0.75rem; background: var(--puglia-section-title); color: white; border: none; padding: 0.75rem 2rem; border-radius: 0.5rem; font-size: 1.125rem; font-weight: 500; cursor: pointer; transition: all 0.3s ease; box-shadow: 0 4px 12px rgba(202, 43, 114, 0.3);"
                  onmouseover="this.style.background = 'rgba(202, 43, 114, 0.8)'; this.style.transform = 'translateY(-2px)'; this.style.boxShadow = '0 8px 25px rgba(202, 43, 114, 0.4)'"
                  onmouseout="this.style.background = 'var(--puglia-section-title)'; this.style.transform = 'translateY(0)'; this.style.boxShadow = '0 4px 12px rgba(202, 43, 114, 0.3)'">
            <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            <%= current_translations.rsvp.button_text %>
          </button>
          
          <p style="font-size: 0.875rem; color: var(--puglia-text-light); margin-top: 1rem; font-style: italic;">
            <%= current_translations.rsvp.note %>
          </p>
        </div>
      </div>
    </div>

    <!-- Accommodation Card -->
    <div class="card" style="position: relative; z-index: 10;">
      <div style="padding: 1.5rem 1.5rem 0;">
        <h4 style="color: var(--puglia-text-dark); display: flex; align-items: center; gap: 0.75rem; font-size: 1.25rem;">
          <svg style="width: 1.5rem; height: 1.5rem; color: var(--puglia-orange);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
          </svg>
          <%= current_translations.rsvp.accommodation_title %>
        </h4>
      </div>
      <div style="padding: 1.5rem;">
        <p style="color: var(--puglia-text-dark); line-height: 1.6;">
          <%= current_translations.rsvp.accommodation_desc %>
        </p>
      </div>
    </div>

  </div>
</section>