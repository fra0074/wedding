<!-- Travel Section -->
<section id="travel" class="section travel-section">
  <div class="section-background">
    <div class="bg-decorations">
      <div class="bg-decoration bg-decoration-1"></div>
      <div class="bg-decoration bg-decoration-2"></div>
    </div>
  </div>
  
  <div class="container">
    <div class="section-header">
      <h2 class="section-title"><%= current_translations.travel.title %></h2>
      <div class="section-divider">
        <div class="divider-line"></div>
        <svg class="divider-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
        </svg>
        <div class="divider-line"></div>
      </div>
    </div>

    <div style="position: relative; z-index: 10;">
      <!-- Interactive Map - Full Width -->
      <div style="margin-bottom: 3rem;">
        <h3 style="font-size: 1.5rem; font-family: 'Playfair Display', serif; color: var(--puglia-text-dark); margin-bottom: 1rem; text-align: center;"><%= current_translations.travel.map_title %></h3>
        <div class="card" style="padding: 0; overflow: hidden; max-width: 1200px; margin: 0 auto;">
          <div id="map" style="aspect-ratio: 21/9; background: linear-gradient(135deg, #e3f2fd, #e8f5e8); position: relative; border-radius: 1rem; min-height: 500px;">
            <!-- Google Maps will be loaded here -->
          </div>
        </div>
      </div>

      <!-- Travel Instructions - Full Width Below Map -->
      <div style="margin-bottom: 3rem;">
        <h3 style="font-size: 1.5rem; font-family: 'Playfair Display', serif; color: var(--puglia-text-dark); margin-bottom: 2rem; text-align: center;"><%= current_translations.travel.title %></h3>
        
        <div class="travel-tabs" style="max-width: 1000px; margin: 0 auto;">
          <div class="tab-list">
            <button class="tab-button active" data-tab="plane">
              <i class="fas fa-plane"></i>
              <span><%= current_translations.travel.tabs.plane %></span>
            </button>
            <button class="tab-button" data-tab="car">
              <i class="fas fa-car"></i>
              <span><%= current_translations.travel.tabs.car %></span>
            </button>
            <button class="tab-button" data-tab="train">
              <i class="fas fa-train"></i>
              <span><%= current_translations.travel.tabs.train %></span>
            </button>
          </div>

          <div class="tab-content">
            <div id="plane" class="tab-panel active">
              <div class="card">
                <h4><%= current_translations.travel.plane.title1 %></h4>
                <p><%= current_translations.travel.plane.desc1 %></p>
              </div>
              <div class="card">
                <h4><%= current_translations.travel.plane.title2 %></h4>
                <p><%= current_translations.travel.plane.desc2 %></p>
              </div>
            </div>
            
            <div id="car" class="tab-panel">
              <div class="card">
                <h4><%= current_translations.travel.car.title1 %></h4>
                <p><%= current_translations.travel.car.desc1 %></p>
              </div>
              <div class="card">
                <h4><%= current_translations.travel.car.title2 %></h4>
                <p><%= current_translations.travel.car.desc2 %></p>
              </div>
            </div>
            
            <div id="train" class="tab-panel">
              <div class="card">
                <h4><%= current_translations.travel.train.title1 %></h4>
                <p><%= current_translations.travel.train.desc1 %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Tourist attractions and Important note -->
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; max-width: 1000px; margin: 0 auto;">
        <!-- Tourist attractions -->
        <div class="card" style="padding: 1.5rem;">
          <h4 style="font-size: 1.125rem; font-weight: 600; color: var(--puglia-text-dark); margin-bottom: 1rem;"><%= current_translations.travel.attractions_title %></h4>
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(120px, 1fr)); gap: 0.75rem;">
            <% wedding_data.travel.attractions.each do |attraction| %>
              <div style="display: flex; align-items: center; gap: 0.5rem; color: var(--puglia-text-dark); background: rgba(255, 255, 255, 0.8); border-radius: 0.375rem; padding: 0.5rem;">
                <svg style="width: 1rem; height: 1rem; color: var(--puglia-orange);" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
                <span style="font-size: 0.875rem; font-weight: 500;"><%= attraction %></span>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Important note -->
        <div class="card" style="padding: 1.5rem;">
          <h4 style="font-size: 1.125rem; font-weight: 600; color: var(--puglia-text-dark); margin-bottom: 1rem;"><%= current_translations.travel.useful_info.title %></h4>
          <p style="color: var(--puglia-text-dark); line-height: 1.4;"><%= current_translations.travel.useful_info.note %></p>
        </div>
      </div>
    </div>
  </div>
</section>